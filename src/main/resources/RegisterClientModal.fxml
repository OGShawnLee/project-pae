<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="container" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="720.0" prefWidth="720.0" stylesheets="@main.css" xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gigabank.controller.RegisterClientController">
  <children>
    <VBox layoutX="200.0" layoutY="109.0" prefWidth="320.0" spacing="16.0">
      <children>
        <Label styleClass="title" text="Registrar Cliente">
          <VBox.margin>
            <Insets/>
          </VBox.margin>
          <padding>
            <Insets bottom="8.0"/>
          </padding>
        </Label>
        <VBox spacing="8.0">
          <children>
            <Label styleClass="label" text="Nombre"/>
            <TextField fx:id="nameField" promptText="Introduzca el Nombre del Cliente"
                       styleClass="input"/>
          </children>
        </VBox>
        <VBox spacing="8.0">
          <children>
            <Label styleClass="label" text="Apellidos"/>
            <TextField fx:id="lastNameField" promptText="Introduzca los Apellidos del Cliente" styleClass="input"/>
          </children>
        </VBox>
        <VBox spacing="8.0">
          <children>
            <Label styleClass="label" text="Correo Electrónico"/>
            <TextField fx:id="emailField" promptText="Introduzca el Correo Electrónico del Cliente" styleClass="input"/>
          </children>
        </VBox>
        <VBox spacing="8.0">
          <children>
            <Label styleClass="label" text="Nacionalidad"/>
            <TextField fx:id="nationalityField" promptText="Introduzca la Nacionalidad del Cliente" styleClass="input"/>
          </children>
        </VBox>
        <VBox spacing="8.0">
          <children>
            <Label styleClass="label" text="Dirección"/>
            <TextField fx:id="addressField" promptText="Introduzca la Dirección del Cliente" styleClass="input"/>
          </children>
        </VBox>
        <VBox spacing="8.0">
          <children>
            <Label styleClass="label" text="Teléfono"/>
            <TextField fx:id="phoneField" promptText="Introduzca el Teléfono del Cliente" styleClass="input"/>
          </children>
        </VBox>
        <VBox spacing="8.0">
          <children>
            <Label styleClass="label" text="Fecha de Nacimiento"/>
            <DatePicker fx:id="bornAtDatePicker" maxWidth="1.7976931348623157E308"
                        promptText="Introduzca la Fecha de Nacimiento del Cliente" styleClass="input"/>
          </children>
        </VBox>
        <HBox>
          <children>
            <Button mnemonicParsing="false" onAction="#handleRegister" prefWidth="320.0" styleClass="button"
                    text="Registrar Cliente"/>
          </children>
        </HBox>
      </children>
    </VBox>
  </children>
</AnchorPane>
